  "bull"        10
  "warg"        10
  "rat"         11   (sewer)
  "sapling"     12
  "ogre-maji"   12*!
  "black"       12   (dragon)
  "troll"       14*  (regenerates)
  "crocodile"   14
  "mindflayer"  14*! (junior)
  "giant"       16*  (hill)
  "bear"        16   (grizzly)
  "blue"        16   (dragon)
